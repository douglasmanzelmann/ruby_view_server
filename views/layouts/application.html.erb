<% 
  def link_to(name, url)
    return "<a href='#{url}'>#{name}</a>"
  end
%>

<html>

  <% if @request.query['first_name'] && !@request.query['first_name'].empty? %>
    Hello there <%= @request.query['first_name'] %>
    Do you like beer? <%= @request.query['beer'] %>
  <% else %>
    Enter thy name
    <form method='post' action="<%= @request.path %>">
      First name: <input type="text" name="first_name" placeholder='first name'/><br />
      Do You like beer? <input type="checkbox" name="beer" value="yes">Yes
                        <input type="checkbox" name="beer" value="no">No<br />
      <input type="submit" value="Submit" />
    </form>
  <% end %>

  <body>  
    <h1>You're using a layout</h1>
    <p>
      <h3>Header in da house</h3>
      <p>check me out</p>
      <%= link_to('My first rails app, yo', 'http://avschedule.heroku.com') %>
    </p>
    <hr />
    <div>
      <%= yield %>
    </div>
    <hr />
    <div>
      <h3>i love</h3>
      <p>boobs</p>
    </div>
  </body>
</html>